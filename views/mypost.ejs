<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Posts</title>
    <link href="https://unpkg.com/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #000000;
            color: #ffffff;
        }
        .card:hover {
            transform: scale(1.02);
            transition: transform 0.3s ease;
        }
    </style>
</head>
<body class="bg-black text-white">

    <!-- Navbar -->
    <nav class="bg-gray-900 shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
            <div class="flex items-center">
                <img class="h-8 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Logo">
                <span class="ml-3 text-2xl font-bold text-white">MyBlog</span>
            </div>
            <div class="space-x-4">
                <a href="/home/<%= user.name %>" class="text-gray-400 hover:text-white font-medium">Home</a>
                <a href="/home/<%=user.name%>/myposts" class="text-gray-400 hover:text-white font-medium">My Posts</a>
                <a href="/<%= user.name %>/post/create" class="bg-indigo-600 hover:bg-indigo-500 text-white px-4 py-2 rounded-md font-medium">Create New Post</a>
                <a href="/" class="text-gray-400 hover:text-white font-medium">Logout</a>
            </div>
        </div>
    </nav>

    <!-- My Posts Section -->
    <section class="py-12 bg-gray-900">
        <div class="max-w-6xl mx-auto px-4">
            <h2 class="text-3xl font-bold text-white mb-10">My Blog Posts</h2>

            <% if (user.posts.length === 0) { %>
                <p class="text-gray-400">You have not created any posts yet.</p>
            <% } else { %>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    <% user.posts.forEach(function(post) { %>
                        <!-- Blog Card -->
                        <div class="card bg-gray-800 p-6 rounded-lg shadow-lg hover:shadow-xl transform transition duration-300">
                            <h3 class="text-2xl font-semibold text-white"><%= post.title %></h3>
                            <p class="mt-3 text-gray-400"><%- post.content.substring(0, 100) %>...</p>
                            <a href="/home/<%=user.name%>/posts/<%= post._id %>" class="mt-4 inline-block text-indigo-500 hover:text-indigo-400 font-medium">
                                Read More
                            </a>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-black py-8">
        <div class="max-w-6xl mx-auto px-4">
            <p class="mt-8 text-gray-400 text-center">&copy; 2024 MyBlog. All rights reserved.</p>
        </div>
    </footer>

</body>
</html>

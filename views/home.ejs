<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - MyBlog</title>
    <link href="https://unpkg.com/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-900 text-white">

    <!-- Navbar -->
    <nav class="bg-gray-800 p-4 shadow-lg">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
            <div class="flex items-center">
                <a href="/" class="text-2xl font-bold text-white">MyBlog</a>
            </div>
            <div class="flex space-x-4 items-center">
                <!-- Username displayed after login -->
                <span class="text-gray-300 font-medium">Welcome, <%= user.name %></span>
                <!-- Blog options -->
                <a href="/<%= user.name %>/post/create" class="bg-indigo-600 hover:bg-indigo-500 text-white px-4 py-2 rounded-md font-medium">Create Post</a>
                <a href="/home/<%=user.name%>/myposts" class="text-gray-300 hover:text-white font-medium">My Posts</a>
                <!-- Logout button -->
                <form action="/" class="inline">
                    <button type="submit" class="bg-red-600 hover:bg-red-500 text-white px-4 py-2 rounded-md font-medium">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <!-- Content Section -->
    <div class="max-w-7xl mx-auto py-10 px-4">
        <h1 class="text-4xl font-bold text-white mb-8">All Blog Posts</h1>

        <!-- Blog posts section -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Loop through posts -->
            <% posts.forEach(post => { %>
                <div class="bg-gray-800 p-6 rounded-lg shadow-lg hover:shadow-xl transform transition duration-300">
                    <h2 class="text-2xl font-semibold text-white mb-3"><%= post.title %></h2>
                    <p class="text-gray-400 mb-2">by <span class="text-indigo-400"><%= post.author.name %></span></p>
                    <p class="text-gray-400 mb-4"><%- post.content.substring(0, 100) %>...</p>
                    <a href="/home/<%=user.name%>/posts/<%= post._id %>" class="text-indigo-500 hover:text-indigo-400 font-medium">Read More</a>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-900 py-6 mt-10">
        <div class="max-w-7xl mx-auto text-center text-gray-500">
            &copy; 2024 MyBlog. All rights reserved.
        </div>
    </footer>

</body>
</html>
